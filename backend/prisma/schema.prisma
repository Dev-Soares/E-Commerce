generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {

  id          String  @id @default(uuid())
  title       String?
  description String?
  category    String?
  price       Float
  cartItem  Cart? 

}

model Cart {

  id          String   @id @default(uuid())
  productId   String   @unique // CHAVE DE REFERÊNCIA: Garante que um produto só aparece uma vez no carrinho
  quantity    Int      @default(1)
  product     Product  @relation(fields: [productId], references: [id]) 

}