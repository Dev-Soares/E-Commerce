

generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {

  id          Int  @id @default(autoincrement())
  title       String?
  description   String?
  price       Float
  stock       Int
  cartItem  Cart? 

}

model Cart {

  id          Int      @id @default(autoincrement())
  productId   Int      @unique // CHAVE DE REFERÊNCIA: Garante que um produto só aparece uma vez no carrinho
  quantity    Int      @default(1)

  product     Product  @relation(fields: [productId], references: [id])

}